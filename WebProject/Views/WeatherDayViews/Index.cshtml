@model IEnumerable<WebProject.Domain.Models.WeatherTask.WeatherDayView>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.City)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.WeatherName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.WeatherShortDescription)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.WeatherTemperature)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.WeatherTemperatureFeelsLikeCels)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.City)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.WeatherName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.WeatherShortDescription)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.WeatherTemperature)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.WeatherTemperatureFeelsLikeCels)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
